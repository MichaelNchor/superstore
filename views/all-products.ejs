<%- include("topbar") -%>
<%- include("modern-nav") -%>

<!-- Breadcrumb -->
<div class="container my-4">
    <nav aria-label="breadcrumb" style="background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%); padding: 1rem 1.5rem; border-radius: 1rem; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06); border: 1px solid #e5e7eb;">
        <ol class="breadcrumb mb-0" style="background: transparent; padding: 0;">
            <li class="breadcrumb-item">
                <a href="/" style="color: #2563eb; text-decoration: none; font-weight: 600; font-size: 0.95rem; display: inline-flex; align-items: center; transition: all 0.3s;" onmouseover="this.style.color='#7c3aed'; this.style.transform='translateX(3px)'" onmouseout="this.style.color='#2563eb'; this.style.transform='translateX(0)'">
                    <i class="fas fa-home mr-2" style="font-size: 0.9rem;"></i>Home
                </a>
            </li>
            <li class="breadcrumb-item active" style="color: #1f2937; font-weight: 700; font-size: 0.95rem;"><%= title %></li>
        </ol>
    </nav>
</div>

<style>
    .breadcrumb-item + .breadcrumb-item::before {
        content: "â€º";
        color: #9ca3af;
        font-size: 1.25rem;
        font-weight: 600;
    }
    
    /* Professional Price Styling */
    .product-price {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        flex-wrap: wrap;
        margin-top: 0.75rem;
    }
    
    .current-price {
        font-size: 1.75rem;
        font-weight: 700;
        color: #1f2937;
        line-height: 1;
    }
    
    .original-price {
        font-size: 1rem;
        font-weight: 400;
        color: #9ca3af;
        text-decoration: line-through;
        line-height: 1;
    }
    
    .discount-percent {
        font-size: 0.875rem;
        font-weight: 600;
        color: #10b981;
        background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
        padding: 0.25rem 0.75rem;
        border-radius: 0.5rem;
        line-height: 1;
    }
</style>

<!-- Messages -->
<div class="container mb-3">
    <%- include('messages') %> 
</div>

<!-- Modern Shop Start -->
<div class="container" style="padding-bottom: 3rem;">
    <div class="row">
                <!-- Modern Sidebar Start -->
                <div class="col-lg-3 col-md-4 mb-5">
                    <!-- Category Filter -->
                    <div class="card-modern mb-4">
                        <div class="card-modern-header">
                            <h5 style="margin: 0; color: #1f2937; font-weight: 700;">
                                <i class="fas fa-filter mr-2" style="color: #2563eb;"></i>Filter by Category
                            </h5>
                        </div>
                        <div class="card-modern-body" style="padding: 1rem;">
                            <% pages.forEach(function(page){ %>
                                <% if (page.slug == "products") { %>
                                    <a href="/<%= page.slug %>" class="category-filter-item d-flex align-items-center mb-2 p-3 text-decoration-none" style="background: linear-gradient(135deg, #f9fafb 0%, #ffffff 100%); border-radius: 0.75rem; border: 1px solid #e5e7eb; transition: all 0.3s;" onmouseover="this.style.background='linear-gradient(135deg, #2563eb 0%, #7c3aed 100%)'; this.style.borderColor='transparent'; this.style.transform='translateX(5px)'; this.style.boxShadow='0 4px 12px rgba(37, 99, 235, 0.3)'; this.querySelector('.cat-text').style.color='white'; this.querySelector('.cat-icon').style.color='white'" onmouseout="this.style.background='linear-gradient(135deg, #f9fafb 0%, #ffffff 100%)'; this.style.borderColor='#e5e7eb'; this.style.transform='translateX(0)'; this.style.boxShadow='none'; this.querySelector('.cat-text').style.color='#1f2937'; this.querySelector('.cat-icon').style.color='#2563eb'">
                                        <i class="fas fa-th cat-icon mr-3" style="color: #2563eb; font-size: 1.1rem; transition: color 0.3s;"></i>
                                        <span class="cat-text" style="color: #1f2937; font-weight: 600; font-size: 0.95rem; transition: color 0.3s;"><%= page.title.charAt(0).toUpperCase() %><%= page.title.slice(1) %></span>
                                    </a>                            
                                <% } %>
                            <% }) %>
                            
                            <div style="border-top: 2px solid #e5e7eb; margin: 1rem 0; padding-top: 1rem;"></div>
                            
                            <% categories.forEach(function(category){ %>
                                <a href="/products/<%= category.slug %>" class="category-filter-item d-flex align-items-center mb-2 p-3 text-decoration-none" style="background: linear-gradient(135deg, #f9fafb 0%, #ffffff 100%); border-radius: 0.75rem; border: 1px solid #e5e7eb; transition: all 0.3s;" onmouseover="this.style.background='linear-gradient(135deg, #2563eb 0%, #7c3aed 100%)'; this.style.borderColor='transparent'; this.style.transform='translateX(5px)'; this.style.boxShadow='0 4px 12px rgba(37, 99, 235, 0.3)'; this.querySelector('.cat-text').style.color='white'; this.querySelector('.cat-icon').style.color='white'" onmouseout="this.style.background='linear-gradient(135deg, #f9fafb 0%, #ffffff 100%)'; this.style.borderColor='#e5e7eb'; this.style.transform='translateX(0)'; this.style.boxShadow='none'; this.querySelector('.cat-text').style.color='#1f2937'; this.querySelector('.cat-icon').style.color='#2563eb'">
                                    <i class="fas fa-chevron-right cat-icon mr-3" style="color: #2563eb; font-size: 0.875rem; transition: color 0.3s;"></i>
                                    <span class="cat-text" style="color: #1f2937; font-weight: 600; font-size: 0.95rem; transition: color 0.3s;"><%= category.title.charAt(0).toUpperCase() %><%= category.title.slice(1) %></span>
                                </a>
                            <% }) %>
                        </div>
                    </div>
                    
                    <!-- Quick Links Card -->
                    <div class="card-modern">
                        <div class="card-modern-header">
                            <h5 style="margin: 0; color: #1f2937; font-weight: 700;">
                                <i class="fas fa-star mr-2" style="color: #f59e0b;"></i>Quick Links
                            </h5>
                        </div>
                        <div class="card-modern-body" style="padding: 1rem;">
                            <a href="/wishlist" class="d-block mb-3 text-decoration-none" style="color: #4b5563; font-weight: 500; transition: color 0.2s;">
                                <i class="fas fa-heart mr-2" style="color: #ef4444;"></i>My Wishlist
                            </a>
                            <a href="/cart" class="d-block mb-3 text-decoration-none" style="color: #4b5563; font-weight: 500; transition: color 0.2s;">
                                <i class="fas fa-shopping-cart mr-2" style="color: #2563eb;"></i>Shopping Cart
                            </a>
                            <a href="/cart/checkout" class="d-block text-decoration-none" style="color: #4b5563; font-weight: 500; transition: color 0.2s;">
                                <i class="fas fa-credit-card mr-2" style="color: #10b981;"></i>Checkout
                            </a>
                        </div>
                    </div>
                </div>
                <!-- Modern Sidebar End -->


                <!-- Modern Products Grid Start -->
                <div class="col-lg-9 col-md-8">
                    <!-- Page Header -->
                    <div class="d-flex align-items-center justify-content-between mb-5">
                        <h2 style="font-size: 2rem; font-weight: 800; color: #1f2937; margin: 0;">
                            <%= title %>
                        </h2>
                        <div class="d-flex align-items-center gap-3">
                            <span style="color: #6b7280; font-size: 0.875rem;">
                                <%= products.length %> Products Found
                            </span>
                        </div>
                    </div>
                    
                    <!-- Products Grid -->
                    <div class="row">
                        <% products.slice().reverse().forEach(function(product){ %>
                        <div class="col-lg-4 col-md-6 col-sm-6 mb-4 animate-on-scroll">
                            <div class="product-card-modern">
                                <!-- Product Actions -->
                                <div class="product-actions">
                                    <a href="/products/<%= product.category %>/<%= product.slug %>" class="action-btn" title="Quick View">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/wishlist/add/<%= product.slug %>" class="action-btn add-to-wishlist-btn" data-product-id="<%= product._id %>" title="Add to Wishlist">
                                        <i class="far fa-heart"></i>
                                    </a>
                                </div>
                                
                                <!-- Discount Badge -->
                                <% if (product.discount > 0) { %>
                                <div class="product-badge">
                                    -<%= product.discount %>%
                                </div>
                                <% } %>
                                
                                <!-- Product Image -->
                                <a href="/products/<%= product.category %>/<%= product.slug %>">
                                    <div class="product-image">
                                        <img src="/product_images/<%= product._id %>/<%= product.image %>" alt="<%= product.title %>">
                                    </div>
                                </a>
                                
                                <!-- Product Info -->
                                <div class="product-info">
                                    <div class="product-category">
                                        <%= product.category %>
                                    </div>
                                    <a href="/products/<%= product.category %>/<%= product.slug %>" class="text-decoration-none">
                                        <h3 class="product-title">
                                            <%= product.title.charAt(0).toUpperCase() + product.title.slice(1) %>
                                        </h3>
                                    </a>
                                    
                                    <!-- Rating -->
                                    <div class="product-rating">
                                        <div class="stars">
                                            <% for(var i = 0 ; i < Math.floor(product.rating) ; i ++){ %>
                                                <i class="fas fa-star"></i>
                                            <% } %>
                                            <% for(var i = 0 ; i < (Math.round(product.rating) - Math.floor(product.rating)) ; i ++){ %>
                                                <i class="fas fa-star-half-alt"></i>
                                            <% } %>
                                            <% for(var i = 0 ; i < (5 - Math.ceil(product.rating)) ; i ++){ %>
                                                <i class="far fa-star"></i>
                                            <% } %>
                                        </div>
                                        <span class="rating-count">(<%= product.numberOfRatings %>)</span>
                                    </div>
                                    
                                    <!-- Price -->
                                    <div class="product-price">
                                        <span class="current-price">
                                            <%= currency %> <%= ((product.price - (product.price*product.discount/100))*exrate).toFixed(2) %>
                                        </span>
                                        <% if (product.discount > 0) { %>
                                        <span class="original-price">
                                            <%= currency %> <%= (product.price*exrate).toFixed(2) %>
                                        </span>
                                        <span class="discount-percent">
                                            Save <%= product.discount %>%
                                        </span>
                                        <% } %>
                                    </div>
                                    
                                    <!-- Add to Cart Button -->
                                    <a href="/cart/add/<%= product.slug %>" class="btn btn-modern btn-modern-primary w-100 mt-3">
                                        <i class="fas fa-shopping-cart mr-2"></i>Add to Cart
                                    </a>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                    
                    <!-- Modern Pagination -->
                    <div class="row mt-5">
                        <div class="col-12">
                            <nav>
                                <ul class="pagination justify-content-center" style="gap: 0.5rem;">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" style="border-radius: 0.5rem; border: 2px solid #e5e7eb; color: #9ca3af;">
                                            <i class="fas fa-chevron-left"></i>
                                        </a>
                                    </li>
                                    <li class="page-item active">
                                        <a class="page-link" href="#" style="border-radius: 0.5rem; background: #2563eb; border-color: #2563eb; font-weight: 600;">1</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#" style="border-radius: 0.5rem; border: 2px solid #e5e7eb; color: #4b5563; font-weight: 600;">2</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#" style="border-radius: 0.5rem; border: 2px solid #e5e7eb; color: #4b5563; font-weight: 600;">3</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#" style="border-radius: 0.5rem; border: 2px solid #e5e7eb; color: #4b5563;">
                                            <i class="fas fa-chevron-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
                <!-- Modern Products Grid End -->
            </div>
        </div>
    </div>
    <!-- Modern Shop End -->

    <%- include("footer") -%>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="/mail/jqBootstrapValidation.min.js"></script>
    <script src="/mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="/js/main.js"></script>
    
    <!-- Modern UI Enhancements -->
    <script src="/js/modern-ui.js"></script>
    
    <style>
        /* Hover effects for sidebar links */
        .card-modern-body a:hover {
            background: #2563eb !important;
            color: white !important;
            transform: translateX(5px);
        }
        .card-modern-body a:hover span {
            color: white !important;
        }
        .card-modern-body a:hover .badge-modern {
            background: white !important;
            color: #2563eb !important;
        }
    </style>
</body>
    
</html>