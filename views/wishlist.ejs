<%- include("topbar") -%>
<%- include("modern-nav") -%>

<!-- Breadcrumb -->
<div class="container my-4">
    <nav aria-label="breadcrumb" style="background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%); padding: 1rem 1.5rem; border-radius: 1rem; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06); border: 1px solid #e5e7eb;">
        <ol class="breadcrumb mb-0" style="background: transparent; padding: 0;">
            <li class="breadcrumb-item">
                <a href="/" style="color: #2563eb; text-decoration: none; font-weight: 600; font-size: 0.95rem; display: inline-flex; align-items: center; transition: all 0.3s;" onmouseover="this.style.color='#7c3aed'; this.style.transform='translateX(3px)'" onmouseout="this.style.color='#2563eb'; this.style.transform='translateX(0)'">
                    <i class="fas fa-home mr-2" style="font-size: 0.9rem;"></i>Home
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="/products" style="color: #2563eb; text-decoration: none; font-weight: 600; font-size: 0.95rem; transition: all 0.3s;" onmouseover="this.style.color='#7c3aed'; this.style.transform='translateX(3px)'" onmouseout="this.style.color='#2563eb'; this.style.transform='translateX(0)'">Shop</a>
            </li>
            <li class="breadcrumb-item active" style="color: #1f2937; font-weight: 700; font-size: 0.95rem;">Wishlist</li>
        </ol>
    </nav>
</div>

<style>
    .breadcrumb-item + .breadcrumb-item::before {
        content: "â€º";
        color: #9ca3af;
        font-size: 1.25rem;
        font-weight: 600;
    }
</style>

<!-- Messages -->
<div class="container">
    <div class="row">
        <div class="col-12">        
            <%- include('messages') %> 
        </div>
    </div>
</div>

<!-- Wishlist Content -->
<div class="container pb-5">
    <% if (typeof wishlist !== "undefined" && wishlist.length > 0) { %>
    <div class="text-center mb-5">
        <h1 class="text-gradient">My Wishlist</h1>
        <p class="text-muted">You have <%= wishlist.length %> item<%= wishlist.length !== 1 ? 's' : '' %> in your wishlist</p>
    </div>

    <div class="row">
        <% wishlist.forEach(function(product){ %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="product-card-modern">
                <div class="product-image">
                    <a href="/products/<%= product.category %>/<%= product.slug %>">
                        <img src="<%= product.image %>" alt="<%= product.title %>" loading="lazy">
                    </a>
                    <% if(product.discount > 0) { %>
                    <span class="badge-modern badge-sale">-<%= product.discount %>%</span>
                    <% } %>
                    <button class="btn-remove-wishlist" onclick="removeFromWishlist('<%= product.title %>')" title="Remove from wishlist">
                        <i class="fas fa-times"></i>
                    </button>
                    <div class="product-overlay">
                        <a href="/products/<%= product.category %>/<%= product.slug %>" class="btn-icon" title="View Details">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="/cart/add/<%= product.slug %>" class="btn-icon" title="Add to Cart">
                            <i class="fas fa-shopping-cart"></i>
                        </a>
                    </div>
                </div>
                <div class="product-content">
                    <span class="product-category">
                        <a href="/products/<%= product.category %>"><%= product.category.charAt(0).toUpperCase() %><%= product.category.slice(1) %></a>
                    </span>
                    <h3 class="product-title">
                        <a href="/products/<%= product.category %>/<%= product.slug %>">
                            <%= product.title.charAt(0).toUpperCase() %><%= product.title.slice(1) %>
                        </a>
                    </h3>
                    <div class="product-rating">
                        <% for(var i = 0 ; i < Math.floor(product.rating) ; i ++){ %>
                        <i class="fas fa-star"></i>
                        <% } %>
                        <% for(var i = 0 ; i < (Math.round(product.rating) - Math.floor(product.rating)) ; i ++){ %>
                        <i class="fas fa-star-half-alt"></i>
                        <% } %>
                        <% for(var i = 0 ; i < (5 - Math.ceil(product.rating)) ; i ++){ %>
                        <i class="far fa-star"></i>
                        <% } %>
                        <span>(<%= product.numberOfRatings %>)</span>
                    </div>
                    <div class="product-price">
                        <span class="current-price"><%= currency %> <%= ((product.price - (product.price*product.discount/100))*exrate).toFixed(2) %></span>
                        <% if(product.discount > 0) { %>
                        <span class="old-price"><%= currency %> <%= (product.price*exrate).toFixed(2) %></span>
                        <% } %>
                    </div>
                    <a href="/cart/add/<%= product.slug %>" class="btn-modern btn-primary btn-block mt-3">
                        <i class="fas fa-shopping-cart mr-2"></i>Add to Cart
                    </a>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
    
    <% } else { %>
    <!-- Empty Wishlist -->
    <div class="empty-cart text-center py-5">
        <img src="/img/empty-cart.webp" alt="Empty Wishlist" style="max-width: 300px; opacity: 0.7;">
        <h3 class="mt-4">Your Wishlist is Empty</h3>
        <p class="text-muted mb-4">Save items you love to your wishlist and find them here later.</p>
        <a href="/products" class="btn-modern btn-primary">
            <i class="fas fa-shopping-bag mr-2"></i>Start Shopping
        </a>
    </div>
    <% } %>
</div>

<style>
    .btn-remove-wishlist {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 35px;
        height: 35px;
        background: white;
        border: none;
        border-radius: 50%;
        color: var(--error-color);
        font-size: 1rem;
        cursor: pointer;
        z-index: 10;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }
    
    .btn-remove-wishlist:hover {
        background: var(--error-color);
        color: white;
        transform: scale(1.1);
    }
</style>
        
<%- include("footer") -%>

<script>
    function removeFromWishlist(title) {
        if (confirm('Remove this item from your wishlist?')) {
            window.location.href = `/wishlist/update/${encodeURIComponent(title)}?action=clear`;
        }
    }
    
    $(function() {
        $('a.clearcart').on('click', function () {
            if (!confirm('Clear all items from wishlist?'))
                return false;
        });
        
        $('a.buynow').on('click', function (e) {
            e.preventDefault();
            $.get('/wishlist/buynow', function() {
                $('form.pp input[type=image]').click();
                $('.ajaxbg').show();
            });
        });
    });
</script>

