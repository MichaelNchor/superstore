        <script>
            // Image gallery functionality
            function changeImage(src, element) {
                document.getElementById('mainProductImage').src = src;
                
                // Update active thumbnail
                document.querySelectorAll('.product-thumbnail').forEach(thumb => {
                    thumb.classList.remove('active');
                });
                element.classList.add('active');
            }

            // Social sharing
            const link = encodeURI(window.location.href);
            const msg = encodeURIComponent('Check out this amazing product!');
            const title = encodeURIComponent(document.querySelector('title') ? document.querySelector('title').textContent : 'Product');

            const fb = document.querySelector('.facebook');
            if(fb) fb.href = `https://www.facebook.com/share.php?u=${link}`;

            const twitter = document.querySelector('.twitter');
            if(twitter) twitter.href = `https://twitter.com/intent/tweet?url=${link}&text=${msg}`;

            const linkedin = document.querySelector('.linkedin');
            if(linkedin) linkedin.href = `https://www.linkedin.com/sharing/share-offsite/?url=${link}`;

            const pinterest = document.querySelector('.pinterest');
            if(pinterest) pinterest.href = `https://pinterest.com/pin/create/button/?url=${link}&description=${msg}`;

            // Star rating functionality
            $(document).ready(function(){
                const stars = ['#s1', '#s2', '#s3', '#s4', '#s5'];
                
                // Click handlers
                stars.forEach((star, index) => {
                    $(star).click(function(){
                        const rating = index + 1;
                        updateStars(rating);
                        $('#rating').val(rating);
                    });
                    
                    // Hover handlers
                    $(star).hover(function(){
                        updateStars(index + 1);
                    });
                });
                
                function updateStars(rating) {
                    stars.forEach((star, index) => {
                        if(index < rating) {
                            $(star).addClass('active');
                        } else {
                            $(star).removeClass('active');
                        }
                    });
                }
            });
        </script>
        
