<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Super Store</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">  

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
</head>

<body style="background-color: #0e2a47;">

<%- include("topbar") -%>

    <!-- Navbar Start -->
    <div class="container-fluid mb-30" style="background-color: #1c538e;">
        <div class="row px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a class="rounded-0 btn d-flex align-items-center justify-content-between bg-primary w-100" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; padding: 0 30px;">
                    <h6 class="text-white m-0"><i class="fa fa-bars mr-2"></i>Categories</h6>
                    <i class="fa fa-angle-down text-white"></i>
                </a>
                <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 bg-light" id="navbar-vertical" style="width: calc(100% - 30px); z-index: 999;">
                    <div class="navbar-nav w-100">
                        <% categories.forEach(function(category){ %>
                                <a href="/products/<%= category.slug %>" class="nav-item nav-link"><%= category.title %></a>
                        <% }); %>
                    </div>
                </nav>
            </div>
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg navbar-dark py-3 py-lg-0 px-0">
                            <a href="/" class="text-decoration-none d-block d-lg-none">
                                <img src="/img/logo-white.png" class="me-2" height="50"
                                      alt="Logo" loading="lazy" />
                                <small style="font-family: 'Poppins', sans-serif; font-size: 12pt;" class="text-white">Super Store</small>
                            </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                            <hr>
                            <div class="input-group input-group-small">
                                <input type="text" class="form-control search" placeholder="Search for products" id="" name="search">
                                <div class="input-group-append">
                                    <button type="submit" class="searchbtn input-group-text bg-transparent text-primary">
                                        <i class="fa fa-search text-white"></i>
                                    </button>
                                </div>
                            </div>
                            <hr>
                            <% pages.forEach(function(page){ %>
                                <% if (page.slug == "home") { %>
                                    <a href="/" class="nav-item nav-link"><%= page.title %></a>
                                <% } else if(page.slug == "checkout"){%>
                                    <a href="/cart/<%= page.slug %>" class="nav-item nav-link"><%= page.title %></a>
                                <% } else if(page.slug == "profile"){%>
                                                                            
                                <% } else { %>
                                    <a href="/<%= page.slug %>" class="nav-item nav-link"><%= page.title %></a>
                                <% } %>
                            <% }); %>
                        </div>
                        <div class="navbar-nav ml-auto py-0 d-none d-lg-block">
                            <a href="/wishlist" class="btn px-0">
                                <i class="fas fa-heart text-white"></i>
                                <span class="badge text-secondary border border-secondary rounded-circle" style="padding-bottom: 2px;">
                                    <% if (typeof wishlist !== "undefined") { %>
                                    <%= wishlist.length %>
                                    <% } else { %>
                                    0
                                    <% } %>
                                </span>
                            </a>
                            <a href="/cart" class="btn px-0 ml-3">
                                <i class="fas fa-shopping-cart text-white"></i>
                                <span class="badge text-secondary border border-secondary rounded-circle" style="padding-bottom: 2px;">
                                    <% if (typeof cart !== "undefined") { %>
                                    <%= cart.length %>
                                    <% } else { %>
                                    0
                                    <% } %>
                                </span>
                            </a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!-- Navbar End -->

    <div class="container-fluid">
        <div class="row px-xl-5">
        <div class="col-12">        
        <%- include('messages') %> 
        </div>
        </div>
        </div>

    <!-- Carousel Start -->
    <div class="container-fluid mb-3 my-3">
        <div class="row px-xl-5">
            <div class="col-lg-12">
                <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#header-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#header-carousel" data-slide-to="1"></li>
                        <li data-target="#header-carousel" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner shadow-lg">
                        <% carousels.forEach(function(carousel, index, arr){ %>
                        <% if(index == 0){ %>
                        <div class="carousel-item position-relative active" style="height: 100vh;">
                            <img class="rounded-lg position-absolute w-100" src="/carousel/<%= carousel._id %>/<%= carousel.image %>" style="object-fit: cover;">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="rounded-lg p-3 carousel-text" style="max-width: 700px;">
                                    <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown"><%= carousel.title %></h1>
                                    <p class="mx-md-5 px-5 animate__animated animate__bounceIn"><%= carousel.subtext %></p>
                                    <a class="btn btn-outline-light py-2 px-4 mt-3 rounded-lg animate__animated animate__fadeInUp" href="/products">Shop Now</a>
                                </div>
                            </div>
                        </div>
                        <% }else{ %>
                        <div class="carousel-item position-relative" style="height: 100vh;">
                            <img class="rounded-lg position-absolute w-100" src="/carousel/<%= carousel._id %>/<%= carousel.image %>" style="object-fit: cover;">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="rounded-lg p-3 carousel-text" style="max-width: 700px;">
                                    <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown"><%= carousel.title %></h1>
                                    <p class="mx-md-5 px-5 animate__animated animate__bounceIn"><%= carousel.subtext %></p>
                                    <a class="btn btn-outline-light py-2 px-4 mt-3 rounded-lg animate__animated animate__fadeInUp" href="/products">Shop Now</a>
                                </div>
                            </div>
                        </div>
                        <% } %>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Carousel End -->


    <!-- Featured Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5 pb-3">
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="rounded-lg d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fas fa-check text-primary m-0 mr-3"></h1>
                    <h5 class="font-weight-semi-bold m-0">Quality Product</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="rounded-lg d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fas fa-shipping-fast text-primary m-0 mr-2"></h1>
                    <h5 class="font-weight-semi-bold m-0">Free Shipping</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="rounded-lg d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fas fa-exchange-alt text-primary m-0 mr-3"></h1>
                    <h5 class="font-weight-semi-bold m-0">14-Day Return</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="rounded-lg d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fas fa-phone-volume text-primary m-0 mr-3"></h1>
                    <h5 class="font-weight-semi-bold m-0">24/7 Support</h5>
                </div>
            </div>
        </div>
    </div>
    <!-- Featured End -->


    <!-- Categories Start -->
    <div class="container-fluid pt-5">
        <h2 class="section-tite position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Categories</span></h2>
        <div class="row px-xl-5 pb-3">
            <% categories.forEach(function(category){ %>
            <% product_lengths.forEach(function(prod){ %>
            <% if(prod.category == category.slug){ %>
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <a class="text-decoration-none" href="/products/<%= category.slug %>">
                    <div class="rounded-lg cat-item d-flex align-items-center mb-4">
                        <div class="rounded-lg overflow-hidden" style="width: 100px; height: 100px;">
                            <img class="rounded-lg img-fluid-cat" src="/category_images/<%= category._id %>/<%= category.image %>" alt="">
                        </div>
                        <div class="rounded-lg flex-fill pl-3">
                            <h6><%= category.title %></h6>
                            <small class="text-body"><%= prod.length %></small>
                        </div>
                    </div>
                </a>
            </div>
            <% } %>
            <% }) %>
            <% }) %>
        </div>
    </div>
    <!-- Categories End -->


    <!-- Products Start -->
    <div class="container-fluid pt-5 pb-3">
        <h2 class="section-tite position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Featured Products</span></h2>
        <div class="row px-xl-5">
            <% products.forEach(function(product){ %>
                <div class="col-lg-4 col-md-6 col-sm-6 pb-1">
                    <div class="rounded-lg product-item bg-light mb-4">
                        <div class="product-img position-relative overflow-hidden">
                            <img class="rounded-lg img-fluid w-100" src="/product_images/<%= product._id %>/<%= product.image %>" alt="">
                            <div class="product-action">
                                <a class="btn btn-outline-dark btn-square" href="/products/<%= product.category %>/<%= product.slug %>"><i class="fa fa-search"></i></a>
                                <a class="btn btn-outline-dark btn-square" href="/cart/add/<%= product.slug %>"><i class="fa fa-shopping-cart"></i></a>
                                <a class="btn btn-outline-dark btn-square" href="/wishlist/add/<%= product.slug %>"><i class="far fa-heart"></i></a>
                            </div>
                        </div>
                        <div class="text-center py-4">
                            <a class="h6 text-decoration-none text-truncate" href=""><%= product.title.charAt(0).toUpperCase() %><%= product.title.slice(1) %></a>
                            <div class="d-flex align-items-center justify-content-center mt-2">
                                <h5><%= currency %> <%= ((product.price - (product.price*product.discount/100))*exrate).toFixed(2) %></h5><h6 class="text-muted ml-2"><del><%= currency %> <%= (product.price*exrate).toFixed(2) %></del></h6>                            
                            </div>
                            <div class="d-flex align-items-center justify-content-center mb-1">
                                <% for(var i = 0 ; i < Math.floor(product.rating) ; i ++){ %>
                                    <small class="fas fa-star mr-1"></small>
                                    <% } %>
                                    <% for(var i = 0 ; i < (Math.round(product.rating) - Math.floor(product.rating)) ; i ++){ %>
                                    <small class="fas fa-star-half-alt mr-1"></small>
                                    <% } %>
                                    <% for(var i = 0 ; i < (5 - Math.ceil(product.rating)) ; i ++){ %>
                                    <small class="far fa-star mr-1"></small>
                                    <% } %>
                                    <small>(<%= product.numberOfRatings %> reviews)</small> 
                            </div>
                                <a href="/cart/add/<%= product.slug %>" class="mt-3 btn btn-primary">Add to Cart</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <!-- Products End -->

    <!-- Vendor Start -->
    <div class="container-fluid py-5">
        <h2 class="section-tite position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Partners</span></h2>
        <div class="row px-xl-5">
            <div class="col">
                <div class="owl-carousel vendor-carousel">
                    <% companys.forEach(function(company){ %>
                    <div class="rounded-lg bg-light p-4">
                        <img class="rounded-lg" src="/company/<%= company._id %>/<%= company.image %>" alt="">
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
    <!-- Vendor End -->

    <%- include("footer") -%>

        <!-- Back to Top -->
        <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>

        <!-- JavaScript Libraries -->
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
        <script src="lib/easing/easing.min.js"></script>
        <script src="lib/owlcarousel/owl.carousel.min.js"></script>

        <!-- Contact Javascript File -->
        <script src="mail/jqBootstrapValidation.min.js"></script>
        <script src="mail/contact.js"></script>

        <!-- Template Javascript -->
        <script src="js/main.js"></script>
    </body>

    </html>