<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Super Store - Your One-Stop Shopping Destination</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Online shopping, e-commerce, products, deals" name="keywords">
    <meta content="Shop the latest products with great deals at Super Store" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@500;600;700;800&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
    
    <!-- Modern Theme -->
    <link href="css/modern-theme.css" rel="stylesheet">
</head>

<body>

<%- include("topbar") -%>

    <!-- Modern Category Navigation -->
    <div class="container-fluid" style="background: white; border-bottom: 1px solid #e5e7eb;">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="navbar navbar-expand-lg navbar-light py-3">
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarPages" style="border: 2px solid #2563eb; color: #2563eb;">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarPages">
                        <div class="navbar-nav w-100 d-flex justify-content-center" style="gap: 2rem;">
                            <% pages.forEach(function(page){ %>
                                <% if (page.slug == "home") { %>
                                    <a href="/" class="nav-item nav-link font-weight-bold" style="color: #2563eb; border-bottom: 2px solid #2563eb; padding-bottom: 0.5rem;"><%= page.title %></a>
                                <% } else if(page.slug == "checkout"){%>
                                    <a href="/cart/<%= page.slug %>" class="nav-item nav-link font-weight-medium" style="color: #4b5563; transition: color 0.2s;"><%= page.title %></a>
                                <% } else if(page.slug == "profile"){%>
                                    <!-- Skip profile in main nav -->
                                <% } else { %>
                                    <a href="/<%= page.slug %>" class="nav-item nav-link font-weight-medium" style="color: #4b5563; transition: color 0.2s;"><%= page.title %></a>
                                <% } %>
                            <% }); %>
                            <div class="dropdown">
                                <a class="nav-link dropdown-toggle font-weight-medium" href="#" data-toggle="dropdown" style="color: #4b5563;">
                                    <i class="fas fa-th mr-1"></i> All Categories
                                </a>
                                <div class="dropdown-menu shadow-lg border-0" style="border-radius: 0.75rem; margin-top: 0.5rem;">
                                    <% categories.forEach(function(category){ %>
                                        <a href="/products/<%= category.slug %>" class="dropdown-item py-2">
                                            <i class="fas fa-angle-right mr-2" style="color: #2563eb;"></i><%= category.title %>
                                        </a>
                                    <% }); %>
                                </div>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!-- Category Navigation End -->

    <!-- Messages -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">        
                <%- include('messages') %> 
            </div>
        </div>
    </div>

    <!-- Modern Hero Carousel Start -->
    <div class="container-fluid px-0 mb-5">
        <div class="hero-carousel-modern">
            <div id="header-carousel" class="carousel slide carousel-fade" data-ride="carousel" data-interval="5000">
                <ol class="carousel-indicators" style="bottom: 2rem;">
                    <% carousels.forEach(function(carousel, index){ %>
                    <li data-target="#header-carousel" data-slide-to="<%= index %>" class="<%= index === 0 ? 'active' : '' %>" style="width: 12px; height: 12px; border-radius: 50%; margin: 0 0.5rem; background: rgba(255,255,255,0.5); border: 2px solid white;"></li>
                    <% }); %>
                </ol>
                <div class="carousel-inner">
                    <% carousels.forEach(function(carousel, index){ %>
                    <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                        <img class="w-100 h-100" src="/carousel/<%= carousel._id %>/<%= carousel.image %>" style="object-fit: cover;" alt="<%= carousel.title %>">
                        <div class="carousel-caption">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-8">
                                        <h1 class="text-white mb-4 animate__animated animate__fadeInUp" style="font-size: 3.5rem; font-weight: 800; line-height: 1.2; text-shadow: 0 4px 6px rgba(0,0,0,0.3);">
                                            <%= carousel.title %>
                                        </h1>
                                        <p class="text-white mb-5 animate__animated animate__fadeInUp animate__delay-1s" style="font-size: 1.25rem; max-width: 600px; text-shadow: 0 2px 4px rgba(0,0,0,0.3);">
                                            <%= carousel.subtext %>
                                        </p>
                                        <a class="btn btn-modern btn-modern-primary px-5 py-3 animate__animated animate__fadeInUp animate__delay-2s" href="/products" style="font-size: 1.1rem;">
                                            <i class="fas fa-shopping-bag mr-2"></i>Shop Now
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
                <a class="carousel-control-prev" href="#header-carousel" data-slide="prev" style="width: 5%;">
                    <span class="carousel-control-prev-icon" style="width: 50px; height: 50px; background-color: rgba(37, 99, 235, 0.8); border-radius: 50%;"></span>
                </a>
                <a class="carousel-control-next" href="#header-carousel" data-slide="next" style="width: 5%;">
                    <span class="carousel-control-next-icon" style="width: 50px; height: 50px; background-color: rgba(37, 99, 235, 0.8); border-radius: 50%;"></span>
                </a>
            </div>
        </div>
    </div>
    <!-- Modern Hero Carousel End -->


    <!-- Modern Features Start -->
    <div class="container-fluid section-modern">
        <div class="container">
            <div class="row px-xl-5">
                <div class="col-lg-3 col-md-6 col-sm-12 mb-4 animate-on-scroll">
                    <div class="feature-box-modern">
                        <div class="icon">
                            <i class="fas fa-check"></i>
                        </div>
                        <div class="content">
                            <h5>Quality Products</h5>
                            <p>Premium quality guaranteed</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12 mb-4 animate-on-scroll">
                    <div class="feature-box-modern">
                        <div class="icon">
                            <i class="fas fa-shipping-fast"></i>
                        </div>
                        <div class="content">
                            <h5>Free Shipping</h5>
                            <p>On orders over $50</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12 mb-4 animate-on-scroll">
                    <div class="feature-box-modern">
                        <div class="icon">
                            <i class="fas fa-undo-alt"></i>
                        </div>
                        <div class="content">
                            <h5>Easy Returns</h5>
                            <p>14-day return policy</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12 mb-4 animate-on-scroll">
                    <div class="feature-box-modern">
                        <div class="icon">
                            <i class="fas fa-headset"></i>
                        </div>
                        <div class="content">
                            <h5>24/7 Support</h5>
                            <p>Dedicated support team</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modern Features End -->


    <!-- Modern Categories Start -->
    <div class="container-fluid section-modern" style="background: white; padding: 4rem 0;">
        <div class="container">
            <h2 class="section-title-modern">Shop by Category</h2>
            <div class="row px-xl-5">
                <% categories.forEach(function(category){ %>
                <% product_lengths.forEach(function(prod){ %>
                <% if(prod.category == category.slug){ %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4 animate-on-scroll">
                    <a href="/products/<%= category.slug %>" class="text-decoration-none">
                        <div class="category-card-modern">
                            <img src="/category_images/<%= category._id %>/<%= category.image %>" alt="<%= category.title %>">
                            <div class="category-content">
                                <h3 class="category-title"><%= category.title %></h3>
                                <p class="category-count"><%= prod.length %> Products</p>
                            </div>
                        </div>
                    </a>
                </div>
                <% } %>
                <% }) %>
                <% }) %>
            </div>
        </div>
    </div>
    <!-- Modern Categories End -->


    <!-- Modern Products Start -->
    <div class="container-fluid section-modern">
        <div class="container">
            <h2 class="section-title-modern">Featured Products</h2>
            <div class="row px-xl-5">
                <% products.slice().reverse().forEach(function(product){ %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4 animate-on-scroll">
                    <div class="product-card-modern">
                        <!-- Product Actions -->
                        <div class="product-actions">
                            <a href="/products/<%= product.category %>/<%= product.slug %>" class="action-btn" title="Quick View">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="/wishlist/add/<%= product.slug %>" class="action-btn add-to-wishlist-btn" data-product-id="<%= product._id %>" title="Add to Wishlist">
                                <i class="far fa-heart"></i>
                            </a>
                        </div>
                        
                        <!-- Discount Badge -->
                        <% if (product.discount > 0) { %>
                        <div class="product-badge">
                            -<%= product.discount %>%
                        </div>
                        <% } %>
                        
                        <!-- Product Image -->
                        <a href="/products/<%= product.category %>/<%= product.slug %>">
                            <div class="product-image">
                                <img src="/product_images/<%= product._id %>/<%= product.image %>" alt="<%= product.title %>">
                            </div>
                        </a>
                        
                        <!-- Product Info -->
                        <div class="product-info">
                            <div class="product-category">
                                <%= product.category %>
                            </div>
                            <a href="/products/<%= product.category %>/<%= product.slug %>" class="text-decoration-none">
                                <h3 class="product-title">
                                    <%= product.title.charAt(0).toUpperCase() + product.title.slice(1) %>
                                </h3>
                            </a>
                            
                            <!-- Rating -->
                            <div class="product-rating">
                                <div class="stars">
                                    <% for(var i = 0 ; i < Math.floor(product.rating) ; i ++){ %>
                                        <i class="fas fa-star"></i>
                                    <% } %>
                                    <% for(var i = 0 ; i < (Math.round(product.rating) - Math.floor(product.rating)) ; i ++){ %>
                                        <i class="fas fa-star-half-alt"></i>
                                    <% } %>
                                    <% for(var i = 0 ; i < (5 - Math.ceil(product.rating)) ; i ++){ %>
                                        <i class="far fa-star"></i>
                                    <% } %>
                                </div>
                                <span class="rating-count">(<%= product.numberOfRatings %>)</span>
                            </div>
                            
                            <!-- Price -->
                            <div class="product-price">
                                <span class="current-price">
                                    <%= currency %> <%= ((product.price - (product.price*product.discount/100))*exrate).toFixed(2) %>
                                </span>
                                <% if (product.discount > 0) { %>
                                <span class="original-price">
                                    <%= currency %> <%= (product.price*exrate).toFixed(2) %>
                                </span>
                                <span class="discount-percent">
                                    Save <%= product.discount %>%
                                </span>
                                <% } %>
                            </div>
                            
                            <!-- Add to Cart Button -->
                            <a href="/cart/add/<%= product.slug %>" class="btn btn-modern btn-modern-primary w-100 mt-3">
                                <i class="fas fa-shopping-cart mr-2"></i>Add to Cart
                            </a>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
            
            <!-- View All Button -->
            <div class="row">
                <div class="col-12 text-center mt-4">
                    <a href="/products" class="btn btn-modern btn-modern-outline px-5 py-3" style="font-size: 1.1rem;">
                        <i class="fas fa-th mr-2"></i>View All Products
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- Modern Products End -->

    <!-- Modern Partners Start -->
    <div class="container-fluid section-modern" style="background: white;">
        <div class="container">
            <h2 class="section-title-modern">Our Trusted Partners</h2>
            <div class="row px-xl-5">
                <div class="col-12">
                    <div class="owl-carousel vendor-carousel" style="display: flex; align-items: center; justify-content: center; flex-wrap: wrap; gap: 2rem;">
                        <% companys.forEach(function(company){ %>
                        <div class="p-4 animate-on-scroll" style="background: #f9fafb; border-radius: 1rem; transition: all 0.3s; border: 1px solid #e5e7eb;">
                            <img src="/company/<%= company._id %>/<%= company.image %>" alt="Partner" style="max-height: 80px; width: auto; filter: grayscale(100%); opacity: 0.7; transition: all 0.3s;">
                        </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modern Partners End -->

    <%- include("footer") -%>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="mail/jqBootstrapValidation.min.js"></script>
    <script src="mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
    
    <!-- Modern UI Enhancements -->
    <script src="js/modern-ui.js"></script>
    
    <style>
        /* Partner logos hover effect */
        .vendor-carousel > div:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }
        .vendor-carousel > div:hover img {
            filter: grayscale(0%);
            opacity: 1;
        }
    </style>
</body>

</html>