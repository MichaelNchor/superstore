<!-- Hero Section -->
<div class="container-fluid" style="background: linear-gradient(135deg, #2563eb 0%, #7c3aed 100%); padding: 4rem 0; margin-bottom: 3rem;">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto text-center">
        <h1 style="color: white; font-size: 2.5rem; font-weight: 700; margin-bottom: 1rem;">
          <i class="fas fa-life-ring" style="margin-right: 1rem;"></i>
