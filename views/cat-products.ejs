<%- include("topbar") -%>
<%- include("modern-nav") -%>

<!-- Breadcrumb -->
<div class="container my-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-transparent p-0">
            <li class="breadcrumb-item"><a href="/" class="text-primary"><i class="fas fa-home mr-1"></i>Home</a></li>
            <li class="breadcrumb-item"><a href="/products" class="text-primary">Shop</a></li>
            <li class="breadcrumb-item active"><%= title %></li>
        </ol>
    </nav>
</div>

<!-- Messages -->
<div class="container">
    <div class="row">
        <div class="col-12">        
            <%- include('messages') %> 
        </div>
    </div>
</div>

<!-- Products Section -->
<div class="container pb-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3 mb-4">
            <div class="card-modern sidebar-modern">
                <h5 class="sidebar-title">
                    <i class="fas fa-filter mr-2"></i>Categories
                </h5>
                
                <!-- All Products -->
                <% pages.forEach(function(page){ %>
                <% if (page.slug == "products") { %>
                <a href="/<%= page.slug %>" class="sidebar-link">
                    <span><%= page.title.charAt(0).toUpperCase() %><%= page.title.slice(1) %></span>
                    <span class="badge badge-modern badge-primary">
                        <% let count = 0; %>
                        <% product_lengths.forEach(function(p){ count+=p.length; return count}) %>
                        <%= count %>
                    </span>
                </a>
                <% } %>
                <% }) %>
                
                <!-- Category Links -->
                <% categories.forEach(function(category){ %>
                <% product_lengths.forEach(function(prod){ %>
                <% if(prod.category == category.slug){ %>
                <a href="/products/<%= category.slug %>" class="sidebar-link">
                    <span><%= category.title.charAt(0).toUpperCase() %><%= category.title.slice(1) %></span>
                    <span class="badge badge-modern badge-secondary"><%= prod.length %></span>
                </a>
                <% } %>
                <% }) %>
                <% }) %>
            </div>
        </div>
        
        <!-- Products Grid -->
        <div class="col-lg-9">
            <!-- Category Header -->
            <div class="mb-4">
                <h2 class="text-gradient"><%= title %></h2>
                <p class="text-muted"><%= products.length %> product<%= products.length !== 1 ? 's' : '' %> found</p>
            </div>
            
            <!-- Product Grid -->
            <div class="row">
                <% if(products.length > 0) { %>
                <% products.slice().reverse().forEach(function(product){ %>
                <div class="col-lg-4 col-md-6 col-sm-6 mb-4">
                    <div class="product-card-modern">
                        <div class="product-image">
                            <a href="/products/<%= product.category %>/<%= product.slug %>">
                                <img src="/product_images/<%= product._id %>/<%= product.image %>" alt="<%= product.title %>" loading="lazy">
                            </a>
                            <% if(product.discount > 0) { %>
                            <span class="badge-modern badge-sale">-<%= product.discount %>%</span>
                            <% } %>
                            <div class="product-overlay">
                                <a href="/products/<%= product.category %>/<%= product.slug %>" class="btn-icon" title="View Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="/cart/add/<%= product.slug %>" class="btn-icon" title="Add to Cart">
                                    <i class="fas fa-shopping-cart"></i>
                                </a>
                                <a href="/wishlist/add/<%= product.slug %>" class="btn-icon" title="Add to Wishlist">
                                    <i class="far fa-heart"></i>
                                </a>
                            </div>
                        </div>
                        <div class="product-content">
                            <h3 class="product-title">
                                <a href="/products/<%= product.category %>/<%= product.slug %>">
                                    <%= product.title.charAt(0).toUpperCase() %><%= product.title.slice(1) %>
                                </a>
                            </h3>
                            <div class="product-rating">
                                <% for(var i = 0 ; i < Math.floor(product.rating) ; i ++){ %>
                                <i class="fas fa-star"></i>
                                <% } %>
                                <% for(var i = 0 ; i < (Math.round(product.rating) - Math.floor(product.rating)) ; i ++){ %>
                                <i class="fas fa-star-half-alt"></i>
                                <% } %>
                                <% for(var i = 0 ; i < (5 - Math.ceil(product.rating)) ; i ++){ %>
                                <i class="far fa-star"></i>
                                <% } %>
                                <span>(<%= product.numberOfRatings %>)</span>
                            </div>
                            <div class="product-price">
                                <span class="current-price"><%= currency %> <%= ((product.price - (product.price*product.discount/100))*exrate).toFixed(2) %></span>
                                <% if(product.discount > 0) { %>
                                <span class="old-price"><%= currency %> <%= (product.price*exrate).toFixed(2) %></span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
                <% } else { %>
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle mr-2"></i>
                        No products found in this category.
                    </div>
                </div>
                <% } %>
            </div>
            
            <!-- Pagination -->
            <% if(products.length > 0) { %>
            <nav class="mt-4">
                <ul class="pagination-modern justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#"><i class="fas fa-chevron-left mr-1"></i>Previous</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next<i class="fas fa-chevron-right ml-1"></i></a>
                    </li>
                </ul>
            </nav>
            <% } %>
        </div>
    </div>
</div>

<%- include("footer") -%>

<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
<script src="../../lib/easing/easing.min.js"></script>
<script src="../../lib/owlcarousel/owl.carousel.min.js"></script>
<script src="../../mail/jqBootstrapValidation.min.js"></script>
<script src="../../mail/contact.js"></script>
<script src="../../js/main.js"></script>
<script src="../../js/modern-ui.js"></script>
</body>
</html>